@*@model IEnumerable<RizTech.BookStore.Models.BookModel>*@
@*@using RizTech.BookStore.Models;*@
@*@model IEnumerable<BookModel>*@

@{
    ViewData["Title"] = "All Books";
}

<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top bg-dark" width="100%" height="225"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@item.Title</h3>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book/GetBook/@item.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">@item.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

